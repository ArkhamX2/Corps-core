<Window x:Class="MegaCorps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCorps"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid Name="CardPanel" Grid.Row="1" Background="Blue">
            <StackPanel Name="CardList" Orientation="Horizontal" Margin="100,0,100,0" HorizontalAlignment="Center"/>
            <Button HorizontalAlignment="Right" Background="Red" Width="100"/>
        </Grid>
    </Grid>
</Window>
